     <div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" style="color: #16A085; font-size: 16px; font-family:'Open Sans';    margin: -20px;" >New Event</h4>
      </div>
      <div class="modal-body" style="margin-top: 10px;font-family:'Open Sans';font-size:14px;font-weight:300 !important;">
        
   
		  <div class="form-group">
                <div class="row">
                    <div class="col-md-4 "><label for="Name" >Name *</label></div>
                    <div class="col-md-8 ">
                        <input type="text" class="form-control fname">
                    </div>
                </div>
            </div>
       
			 
			 <div class="form-group">
                <div class="row">
                    <div class="col-md-4 "><label for="category" > Category *</label></div>
                    <div class="col-md-8 ">
                        
                        <select class="form-control category">
                                <option selected="selected" value=0 disabled >Select</option>
                                 <option value=1>Anguish</option>
                                  <option value=2>Dismay</option>
                            <option value=3>Grief</option>
                            <option value=4>Shock</option>
                            <option value=5>Sorrowful</option>
                         
                            </select>
                    </div>
                </div>
            </div>
			
			
			
			<div class="form-group msg">
                <div class="row">
                    <div class="col-md-4 "><label for="message" >Message *</label></div>
                    <div class="col-md-8 ">
                        <textarea class="form-control emessage" rows="2" cols="20"> </textarea>
                    </div>
                </div>
            </div>
			
			<div class="form-group">
                <div class="row">
                    <div class="col-md-4 "><label for="Name"  >Message Type</label></div>
                    <div class="col-md-8 ">

                        <select class="form-control type" id="messagetype">
                                <option selected="selected" value=0 disabled >Select</option>
                                 <option value=1>Plain Message</option>
                                  <option value=2>Image</option>
                            <option value=3>Video</option>
                            
                         
                            </select>
                    </div>
                </div>
            </div>
			
		
		<div class="form-group">
